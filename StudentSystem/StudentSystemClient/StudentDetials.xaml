<Window x:Class="StudentSystemClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Student Details" Height="350" Width="565.442">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="514*"/>
            <ColumnDefinition Width="41*"/>
            <ColumnDefinition Width="37*"/>
        </Grid.ColumnDefinitions>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="White" Offset="0"/>
                <GradientStop Color="#FF7D94D3" Offset="1"/>
                <GradientStop Color="#FFACC2FC" Offset="0.493"/>
            </LinearGradientBrush>
        </Grid.Background>
        <DataGrid x:Name="StudentGrid" ItemsSource="{Binding}" HorizontalAlignment="Left" Margin="10,36,0,0" VerticalAlignment="Top" Height="203" Width="507" Grid.ColumnSpan="2" />
        <Button x:Name="btnAddNew" Content="ADD NEW" HorizontalAlignment="Left" Margin="180,244,0,0" VerticalAlignment="Top" Width="97" Height="44" Click="btnOK_Click"/>
        <Button x:Name="btnSave" Content="Save" HorizontalAlignment="Left" Margin="288,244,0,0" VerticalAlignment="Top" Width="97" Height="44" Click="btnSave_Click"/>
        <Label Content="Queens's University " HorizontalAlignment="Left" Margin="234,10,0,0" VerticalAlignment="Top" Height="26" Width="116"/>

    </Grid>
</Window>
